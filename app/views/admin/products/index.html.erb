<h1>Products</h1>

<% if flash[:notice].present? %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<p><%= link_to "New Product", new_admin_product_path, class: "btn btn-primary" %></p>

<table class= "table table-striped table-hover">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Created At</th>
  </tr>
  <% for product in @products %>
  <tr>
    <td><%= link_to product.id, admin_product_path(product) %></td>
    <td><%= link_to product.name, admin_product_path(product) %></td>
    <td><%= number_to_currency product.price %></td>
    <td><%= product.created_at.strftime('%A %m/%d/%Y %l:%M %p %Z') %></td>
    <td><%= link_to "edit", edit_admin_product_path(product), class: "btn btn-default" %></td>
    <td><%= link_to "delete", admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
    </td>
  </tr>
  <% end %>
</table>
