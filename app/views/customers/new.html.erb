<h1>Create an account</h1>
<% if flash[:notice].present? %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= binding.pry %>
<%= form_for @customer, url: new_customer_path, html: {class: "form-inline", role:"form"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.submit "Create Account" %>
<% end %>
